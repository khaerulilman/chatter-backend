              "host": ["{{base_url}}"],
              "path": ["api", "auth", "verify-otp"]
            },
            "description": "Verify the OTP sent to the user's email during registration.\n\nâš ï¸ Replace the `otp` value with the actual OTP received via email."
          },
          "response": []
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "// Ensure test_email is available",
                  "const email = pm.environment.get('test_email');",
                  "if (!email) {",
                  "    console.warn('test_email is not set. Please register and verify first.');",
                  "}",
                  "",
                  "console.log('Logging in with email:', email);"
                ],
                "type": "text/javascript"
              }
            },
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200 OK', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response has login success message', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.message).to.eql('Login Berhasil');",
                  "});",
                  "",
                  "pm.test('Response contains token', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('token');",
                  "    pm.expect(jsonData.token).to.be.a('string').and.not.be.empty;",
                  "});",
                  "",
                  "pm.test('Response contains user data', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.data).to.have.property('id');",
                  "    pm.expect(jsonData.data).to.have.property('name');",
                  "    pm.expect(jsonData.data).to.have.property('email');",
                  "});",
                  "",
                  "// Auto-save token and user data to environment",
                  "if (pm.response.code === 200) {",
                  "    const jsonData = pm.response.json();",
                  "    pm.environment.set('auth_token', jsonData.token);",
                  "    pm.environment.set('user_id', jsonData.data.id);",
                  "    pm.environment.set('user_name', jsonData.data.name);",
                  "    pm.environment.set('test_email', jsonData.data.email);",
                  "    console.log('Token and user data saved to environment');",
                  "}",
                  "",
                  "// Handle error cases",
                  "if (pm.response.code === 404) {",
                  "    console.log('Email not found');",
                  "}",
                  "if (pm.response.code === 400) {",
                  "    console.log('Wrong password');",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
