        {
          "name": "Register",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "// Generate random test email if not set",
                  "if (!pm.environment.get('test_email') || pm.environment.get('test_email') === '') {",
                  "    const randomId = Math.random().toString(36).substring(2, 10);",
                  "    const testEmail = `testuser_${randomId}@example.com`;",
                  "    pm.environment.set('test_email', testEmail);",
                  "    console.log('Generated test email:', testEmail);",
                  "}"
                ],
                "type": "text/javascript"
              }
            },
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 201 Created', function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test('Response has success message', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('message');",
                  "    pm.expect(jsonData.message).to.include('OTP sent successfully');",
                  "});",
                  "",
                  "pm.test('Response contains email', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.data).to.have.property('email');",
                  "    // Store email for next requests",
                  "    pm.environment.set('test_email', jsonData.data.email);",
                  "});",
                  "",
                  "// Handle error cases",
                  "if (pm.response.code === 409) {",
                  "    console.log('Email already registered or pending verification');",
                  "}",
                  "",
                  "if (pm.response.code === 400) {",
                  "    console.log('Missing required fields');",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"Test User\",\n    \"email\": \"{{test_email}}\",\n    \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/register",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "register"]
